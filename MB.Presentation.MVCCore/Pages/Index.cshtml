@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}




@foreach (var article in Model.ArticleQueryViews)
{
	<div class="blog-container">
		<div class="blog-header">
			<div class="blog-cover">
				<div class="blog-author">
					<h3>@article.AuthoerName</h3>
				</div>
			</div>
		</div>

		<div class="blog-body">
			<div class="blog-title">
				<h1><a href="#">@article.Title</a></h1>
			</div>
			<div class="blog-summary">
				<p>@article.ShortDescription</p>
			</div>
			<div class="blog-tags">
				<ul>
					<li><a href="#">css</a></li>
					<li><a href="#">web design</a></li>
					<li><a href="#">codepen</a></li>
				</ul>
			</div>
		</div>

		<div class="blog-footer">
			<ul>
				<li class="published-date">@article.CreationDate</li>
				<li class="comments"><a href="#"><svg class="icon-bubble"><use xlink:href="#icon-bubble"></use></svg><span class="numero">4</span></a></li>
				<li class="shares"><a href="#"><svg class="icon-star"><use xlink:href="#icon-star"></use></svg><span class="numero">1</span></a></li>
			</ul>
		</div>
	</div>
}
			

